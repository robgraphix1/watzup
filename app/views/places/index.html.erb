<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'slider1.jpg', :class => 'img-responsive'%>
      <div class="carousel-caption">
        Find the best places to hang in Va Beach!
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider2.jpg'%>
      <div class="carousel-caption">
        Find the best places to hang in Va Beach!
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<% @places.each do |place| %>
<div class="booyah-box col-xs-10 col-xs-offset-1">
<h1><%=link_to place.name, place_path(place) %></h1>
<i><%= place.address %></i><br /><br />
<p><%= place.description %></p>
<% if place.user.present? %>
<small><%= place.user.email %></small><br />
<% if place.photos.last.present? %>
<div class="index-photo">
	<%= image_tag place.photos.last.picture %>
</div>
<% end %>
<% end %>

<% if place.comments.present? %>
<div class="col-xs-12">
	<blockquote>
		<% if place.comments.last.humanized_rating.present? %>
		<b><%= place.comments.last.humanized_rating %></b> -
		<% end %>
		<%= place.comments.last.message %>
		<small><%= place.comments.last.user.email %></small>
	</blockquote>
</div>
<br />
<% end %>
</div>


<% end %>
<div class="col-xs-10 col-xs-offset-1 text-center"> 
<p><%= will_paginate @posts %></p>
</div>